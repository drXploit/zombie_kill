            <kind>1</kind>
            <string>/// Step

image_angle += rot;

if (distance_to_point(xstart,ystart) &gt; maxdistance) &amp;&amp; (!away)
{
    friction += 0.005;
    if (rot &lt; 0) rot += 0.1;
    else if (rot &gt; 0) rot -= 0.1;
}

if (collision_point(x,y,obj_wall_collision,true,false))
{
    speed = 0;
    image_angle = direction;
}   
if (speed == 0) &amp;&amp; (!away)
{
    rot = 0;
    away = true;
    bosstoss = false;
//    effect_create_above(ef_spark,x,y,1,c_white);
    // Play sound
    audio_play_sound(snd_knife_throw_impact, 7, false);
}

if (speed &lt;= 0) &amp;&amp; (away)
{
    if (vib &gt; 0)
        vib--;
    if (vib == 30)
    {
        // Play sound
        audio_play_sound(snd_knife_throw_twang, 8, false);
    }

    if (!flip) flip = true;
}

if (speed &gt; 0)
{
    oldx3 = x - lengthdir_x(40, direction);
    oldy3 = y - lengthdir_y(40, direction);
    oldx2 = x - lengthdir_x(20, direction);
    oldy2 = y - lengthdir_y(20, direction);
    oldx1 = x - lengthdir_x(10, direction);
    oldy1 = y - lengthdir_y(10, direction);
}

if (knife_speed == speed)
{
        speed -= 0.01;
        // Play casing sound
        audio_play_sound(snd_knife_throw_whoosh, 8, false);
}
